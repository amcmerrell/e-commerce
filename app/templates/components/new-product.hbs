<h3>Add a new Item</h3>
<form class="form-group">
  <div class="form-group">
    <label for="name">Item</label>
    {{input class="form-control" value=name id="name"}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{textarea class="form-control" value=description id="description"}}
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    {{input type="number" class="form-control" value=price id="price"}}
  </div>
  <div class="form-group">
    <label for="image">Image URL</label>
    {{input class="form-control" value=image id="image"}}
  </div>
  <button class="btn btn-primary" {{action 'saveItem'}}>Add Items</button>
</form>
